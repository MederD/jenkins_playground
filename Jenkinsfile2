pipeline {
agent any

environment{
    command1 = 'apply'
    command2 = 'destroy'
}

parameters {
        choice(name: 'Command to use', choices: "${command1}\n${command2}", description: 'What command you will use?')
        string(name: 'tfvars', defaultValue: 'jenkins.tfvars', description: 'Which terraform command would you like to use?')
    }

stages {
        stage('Terraform Init') {
            steps {
                sh '''
                   cd Infrastructure/
                   terraform init

                '''
            }
        }
        stage('Terraform Apply or Destroy') {
            steps {
                sh """
                   cd Infrastructure/
                   terraform ${params.Command} -var-file=${params.tfvars}.tfvars -auto-approve
                """
            }
        }
    }
}